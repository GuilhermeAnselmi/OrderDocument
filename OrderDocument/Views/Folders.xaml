<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrderDocument.Views.Folders"
             Title="Folders">
    <StackLayout Spacing="25" Padding="30">

        <ListView x:Name="listFolder" SelectionMode="None" SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Margin="0, 1" Padding="5, 5" HorizontalOptions="FillAndExpand" BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OpenFolder" NumberOfTapsRequired="1" />
                            </StackLayout.GestureRecognizers>
                            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                                <Label Padding="15, 10" Text="{Binding FolderName}" />
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Criar Pasta" Clicked="CreateFolder" />

    </StackLayout>
</ContentPage>