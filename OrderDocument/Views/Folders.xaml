<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrderDocument.Views.Folders"
             Title="Folders">
    <StackLayout Spacing="25" Padding="30">

        <ListView x:Name="listFolder">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Spacing="10" Padding="10" Orientation="Horizontal">
                            <Label Text="{Binding FolderName}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Entry Placeholder="Teste" />

        <Button Text="Criar Pasta" Clicked="CreateFolder" />

    </StackLayout>
</ContentPage>