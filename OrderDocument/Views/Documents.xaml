<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrderDocument.Views.Documents"
             Title="Documents"
             NavigationPage.HasBackButton="True">
    <StackLayout Spacing="25" Padding="30">
        <ListView x:Name="listFile" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Margin="0, 2" HorizontalOptions="FillAndExpand" Padding="5, 5" BackgroundColor="{StaticResource Gray700}" BorderColor="Black" CornerRadius="5">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ViewExplorer" NumberOfTapsRequired="1" />
                            </Frame.GestureRecognizers>
                            <StackLayout Padding="15, 0" Orientation="Horizontal">
                                <Image Source="{Binding Source}" WidthRequest="50" />
                                <StackLayout Margin="5,15,5,15">
                                    <Label Text="{Binding FileName}" />
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Ver Arquivos" Clicked="ViewExplorer" />
        <Button Text="Procurar Documento" Clicked="ImportFile" />

    </StackLayout>
</ContentPage>