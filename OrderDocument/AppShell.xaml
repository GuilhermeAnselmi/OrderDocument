<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OrderDocument.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OrderDocument"
    xmlns:views="clr-namespace:OrderDocument.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Pastas"
        ContentTemplate="{DataTemplate views:Folders}"
        Route="Folders" />
    
    <ShellContent
        Title="Documentos"
        ContentTemplate="{DataTemplate views:Documents}"
        Route="Documents" />

</Shell>
